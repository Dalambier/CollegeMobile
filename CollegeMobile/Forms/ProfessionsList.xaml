                        <Image Source="ProfessionImage_Law.png" MinimumWidthRequest="90" MinimumHeightRequest="84" Grid.Column="0"/>
                        <Frame Background="white" CornerRadius="25" Grid.Column="1" Padding="10">
                            <StackLayout>
                                <Label Text="Право и организация социального обеспечения" HorizontalOptions="Start" FontSize="20" TextColor="Black" FontAttributes="Bold"></Label>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </StackLayout>
                <StackLayout Orientation="Vertical" Padding="10" Spacing="10">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="MCI_Clicked"></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                    <Grid>
